<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'admin.title'|trans }}{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    {% block stylesheets %}
      {{ include('AppBundle::stylesheets.html.twig') }}
    {% endblock %}
  </head>
  <body class="{% block body_class '' %}">
    <main id="container">
      {% block header %}
      {% endblock %}
      {% block sidebar %}
      {% endblock %}
      {% block container %}
      <section id="main-content">
        <section class="wrapper">
          {% block main %}
          <div class="row">
            <div class="col-lg-12">{% block content '' %}</div>
          </div>
          {% endblock %}
        </section>
      </section>
      {% endblock %}
      {% block footer '' %}
    </main>

    {% block javascripts %}
      {{ include('AppBundle::javascripts.html.twig') }}
    {% endblock %}
  </body>
</html>
