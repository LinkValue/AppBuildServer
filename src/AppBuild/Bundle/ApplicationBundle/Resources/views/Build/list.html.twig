{% extends 'AppBuildApplicationBundle::layout.html.twig'%}

{% block title 'admin.build.list.title'|trans %}

{% block header %}
    <h1>{{ 'admin.build.list.title'|trans }}</h1>
    <a href="{{ url('appbuild_admin_build_create', { application_id: application.id }) }}" class="btn btn-primary">
        <span class="fa fa-plus"></span>
        {{ 'admin.build.create.title'|trans }}
    </a>
    <a href="{{ url('appbuild_admin_application_list') }}" class="btn btn-info">
        <span class="fa fa-arrow-left"></span>
        {{ 'admin.application.list.title'|trans }}
    </a>
{% endblock %}

{% block content %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <td>{{ 'admin.build.list.thead.label'|trans }}</td>
            <td class="actions">
                {{ 'admin.build.list.thead.actions'|trans }}
            </td>
        </tr>
        </thead>
        <tbody>
        {% for build in builds %}
            <tr>
                <td>
                    <a href="{{ url('appbuild_admin_build_download', { application_id: application.id, id: build.id }) }}">
                        {{ build.label }}
                    </a>
                </td>
                <td class="actions">
                    <a class="btn btn-primary btn-xs" title="{{ 'admin.build.list.actions.update.title'|trans }}"
                       href="{{ url('appbuild_admin_build_update', { application_id: application.id, id: build.id }) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a class="btn btn-primary btn-xs" title="{{ 'admin.build.list.actions.download.title'|trans }}"
                       href="{{ url('appbuild_admin_build_download', { application_id: application.id, id: build.id }) }}">
                        <i class="fa fa-download"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
