{% extends 'AppBuildApplicationBundle::layout.html.twig' %}

{% block content %}
    <form action="{% block application_form_action '' %}"
        method="POST" {{ form_enctype(form) }} >
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-check"></i>
            {{ 'application.form.submit_button.label'|trans }}
        </button>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var currentUserId = '{{ currentUserId }}';

        // Check and hide current user from Users list
        // (if this was unchecked by mistake, current user would lost his ability to act on this application)
        $('#appbuild_application_users_' + currentUserId)
            .prop('checked', true)
            .closest('.checkbox').hide()
        ;
    </script>
{% endblock %}
